entryPoints:
  http:
    address: ":80"
  https:
    address: ":443"
    http:
      tls:
        certresolver: "letsencrypt"
  minecraft-java:
    address: ":25565"
  minecraft-bedrock:
    address: ":19132"

certificatesResolvers:
  letsencrypt:
    acme:
      storage: acme.json
      email: "{{ reverseproxy.ca_email }}"
      tlsChallenge:
        entryPoint: https

providers:
  file:
    directory: /etc/traefik/services
    watch: true
