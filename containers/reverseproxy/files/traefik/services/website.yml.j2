http:
  routers:
    website:
      rule: "Host(`{{ reverseproxy.domain }}`) || Host(`www.{{ reverseproxy.domain }}`)"
      entrypoints:
        - "https"
        - "http"
      service: website
  services:
    website:
      loadBalancer:
        servers:
          - url:
            {% for host in hostvars[groups['website']] %}
            - "http://{{ host['ansible_default_ipv4']['address'] }}:80"
            {% endfor %}
  middlewares:
    https-redirect:
      redirectscheme:
        scheme: https
